<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:weightSum="2"
    android:background="#ECEFF1">

    <!-- Columna izquierda: Movimiento -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp">

        <!-- Botón Adelante -->
        <Button
            android:id="@+id/btnAdelante"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="↑"
            android:textSize="28sp"
            android:background="@drawable/button_circle_shadow"
            android:layout_marginBottom="20dp"/>

        <!-- Fila Izquierda-Alto-Derecha -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnIzquierda"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="←"
                android:textSize="28sp"
                android:background="@drawable/button_circle_shadow"
                android:layout_marginEnd="15dp"/>

            <Button
                android:id="@+id/btnAlto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="■"
                android:textSize="28sp"
                android:background="@drawable/button_circle_shadow"
                android:layout_marginEnd="15dp"/>

            <Button
                android:id="@+id/btnDerecha"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="→"
                android:textSize="28sp"
                android:background="@drawable/button_circle_shadow"/>
        </LinearLayout>

        <!-- Botón Atrás -->
        <Button
            android:id="@+id/btnAtras"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="↓"
            android:textSize="28sp"
            android:background="@drawable/button_circle_shadow"/>
    </LinearLayout>

    <!-- Columna derecha: LED y Conexión -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/btnLedOn"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:text="LED ON"
            android:textSize="20sp"
            android:background="@drawable/button_rounded"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnLedOff"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:text="LED OFF"
            android:textSize="20sp"
            android:background="@drawable/button_rounded"
            android:layout_marginBottom="40dp"/>

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:text="Conectar al Carrito"
            android:textSize="20sp"
            android:background="@drawable/button_rounded"/>
    </LinearLayout>

</LinearLayout>
